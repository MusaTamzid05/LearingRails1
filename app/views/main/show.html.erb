<div class = "container text-center">
  <div class="row">
    <div class="col-1">
      <%= link_to "Back", root_path, class: "btn btn-primary" %>
    </div>
    <div class="col-11">
    </div>
  </div>

  <div class="row">
    <div class="col-6">
      <img src="https://picsum.photos/200/300" class="img-fluid">
    </div>

    <div class="col-6">
	  <table class="table">
		<thead>
		</thead>
		<tbody>
		  <tr>
			<td>Caption</td>
            <td><%= @photo.caption %></td>
		  </tr>
		  <tr>
			<td>Likes</td>
            <td><%= @photo.like  %></td>
		  </tr>
		  <tr>
			<td>Dislikes</td>
            <td><%= @photo.dislike %></td>
		  </tr>
		</tbody>
	  </table>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col">
      <p class="h1">Ugly Comment Sections</p>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-6">
      <form action="<%= add_comment_path(@photo.id)%>" method="POST">
		  <div class="mb-3">
			<label for="userName" class="form-label">User Name</label>
			<input type="text" class="form-control" id="userName" name="username">
		  </div>
		  <div class="mb-3">
			<label for="comment" class="form-label">Comment</label>
			<textarea class="form-control" id="comment" name="comment" rows="3"></textarea>
          </div>

          <button type="submit" class="mt-3 btn btn-primary">Submit</button>

      </form>

    </div>

  </div>


</div>
